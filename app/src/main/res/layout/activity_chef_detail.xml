<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151417"
    tools:context=".ChefDetails.ChefBasicDetailActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/circle" />



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/imgProfilePhotoUpload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/adduser" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/swansea"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUserName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:hint="eg: Neil Nitin Mukesh"
        android:padding="10dp"
        android:textColorHint="#4C4C4C"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtUserBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUserName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/swansea"
        android:maxLines="1"
        android:text="Bio"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etUserBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUserBio"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:hint="About yourself"
        android:maxLines="3"
        android:maxLength="50"
        android:padding="10dp"
        android:textColorHint="#4C4C4C"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/txtUserPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUserBio"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/swansea"
        android:text="Phone Number"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etUserPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUserPhoneNumber"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:hint="eg: 1234567890"
        android:inputType="number"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHint="#4C4C4C"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/txtUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUserPhoneNumber"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/swansea"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUserEmail"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:hint="xyz@email.com"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHint="#4C4C4C"
        android:textSize="18sp" />




    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/next_button"
        android:fontFamily="@font/swansea"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>